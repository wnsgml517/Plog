<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5">

    <LinearLayout
        android:id="@id/tapBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 첫 번째 이미지 버튼 (왼쪽에 위치) -->
        <ImageView
            android:id="@+id/previousButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="70dp"
            android:padding="8dp"
            android:rotation="180"
            android:scaleType="centerCrop"
            android:src="@drawable/arrow" />

        <!-- 텍스트뷰 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_bold"
            android:text="나의 로깅"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 두 번째 이미지 버튼 (오른쪽에 위치) -->
        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="70dp"
            android:padding="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/right_from_bracket_solid" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInformation"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/tapBar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@id/logoImageView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:cardBackgroundColor="#9E678F5E"
            app:cardCornerRadius="90dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="158dp"
                android:layout_height="158dp"
                android:layout_below="@id/logoImageView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                app:cardBackgroundColor="#F6F5F5"
                app:cardCornerRadius="90dp"
                app:cardElevation="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/photoImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/logoImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="90dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/userImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_solid" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <!-- 사용자 이름 -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="도비"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 정보 수정 및 설정 버튼 -->
            <android.widget.Button
                android:id="@+id/settingsButton"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="7dp"
                android:background="@drawable/pen_solid"
                android:backgroundTint="#4E4E4E" />
        </LinearLayout>

        <!-- 사용자 이미지 -->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/userPlogInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userInformation"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- 나의 로깅 기록 텍스트 -->

        <!-- 플로깅 총 이동기록, 저장한 스탬프 개수, 총 소요시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <!-- 첫 번째 하위 레이아웃 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="0.0 km"
                    android:textColor="#244C25"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/distanceTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="누적 거리"
                    android:textColor="#E2AAA9A9"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Divider between the first and second LinearLayout -->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" /> <!-- You can set the color as per your design -->


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/stampCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0개"
                    android:textColor="#244C25"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="누적 로그"
                    android:textColor="#E2AAA9A9"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" /> <!-- You can set the color as per your design -->


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/elapsedTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#244C25"
                    android:text="00:00:00"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="누적 시간"
                    android:textColor="#E2AAA9A9"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userPlogInformation"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1">
                <!--스탬프 동적 생성될 부분-->

            </GridLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
