<?xml version="1.0" encoding="utf-8"?>
<!-- activity_record.xml -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".activity.RecordActivity">

        <LinearLayout
            android:id="@+id/inputRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/markerimage"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30sp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/trash_marker" />

                <AutoCompleteTextView
                    android:id="@+id/editTextLocation"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:fontFamily="@font/noto_extrabold"
                    android:hint="플로깅 장소 이름 입력"
                    android:inputType="text"
                    android:paddingStart="11dp"
                    android:textSize="19sp"
                    tools:fontFamily="@font/noto_medium" />


                <Spinner
                    android:id="@+id/spinnerLocations"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:autofillHints="기존장소 선택"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/photoImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/rounded_user_plog_inform"
                    android:elevation="10dp"
                    android:src="@drawable/trash_upload" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/rounded_user_plog_inform"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- 첫 번째 하위 레이아웃 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:elevation="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/distanceIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="28sp"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:elevation="8dp"
                            android:src="@drawable/person_running_solid" />

                        <TextView
                            android:id="@+id/distanceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/noto_bold"
                            android:text="0.0 km"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:elevation="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/timeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:elevation="8dp"
                            android:src="@drawable/stopwatch_solid" />

                        <TextView
                            android:id="@+id/elapsedTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/noto_bold"
                            android:text="00:00:00"
                            android:textSize="17sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <!-- 스탬프 선택 버튼 -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/feedbackEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border"
                android:fontFamily="@font/noto_medium"
                android:hint="플로깅 감상평을 적어주세요!"
                android:inputType="textMultiLine"
                android:paddingStart="11dp" />

            <android.widget.Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/noto_extrabold"
                android:text="플로깅 기록 저장"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
