<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/CustomTextAppearance</item>
        <item name="boxStrokeColor">@color/plog_color</item> <!-- 원하는 색상으로 변경하세요 -->
        <item name="android:colorFocusedHighlight">@color/plog_color</item>
        <item name="android:colorControlNormal">@color/plog_color</item>
        <item name="android:textCursorDrawable">@color/plog_color</item>
        <item name="android:textColorHint">@color/plog_color</item>
        <item name="hintTextColor">@color/plog_color</item>

    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item> <!-- 원하는 크기로 조절하세요 -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 배경을 투명하게 설정 -->
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/buttom_sheet_background</item>
    </style>
</resources>
