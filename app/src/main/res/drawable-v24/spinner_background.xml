<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" /> <!-- 배경 색상 -->
                    <corners android:radius="20dp" /> <!-- 테두리 모서리 둥글기 -->
                    <stroke android:color="@android:color/darker_gray" android:width="1dp" /> <!-- 테두리 색상과 두께 -->
                </shape>
            </item>
            <item android:right="16dp">
                <bitmap android:src="@android:drawable/arrow_down_float" android:gravity="center_vertical|right" /> <!-- 드롭다운 아이콘 -->
            </item>
        </layer-list>
    </item>
</selector>
